<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".main_page_Activity">

    <LinearLayout
        android:id="@+id/facebook_head"
        android:layout_width="416dp"
        android:layout_height="60dp"
        android:background="#0866FE"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.6"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteY="0dp">

        <ImageButton
            android:id="@+id/messenger_button"
            android:layout_width="50dp"
            android:layout_height="38dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:background="#0866FE"
            android:src="@drawable/messenger"
            tools:ignore="TouchTargetSizeCheck">

        </ImageButton>

        <ImageButton
            android:id="@+id/search_button"
            android:layout_width="50dp"
            android:layout_height="38dp"
            android:layout_marginTop="10dp"
            android:background="#0866FE"
            android:src="@drawable/search"
            tools:ignore="TouchTargetSizeCheck">

        </ImageButton>

        <ImageButton
            android:id="@+id/plus_button"
            android:layout_width="50dp"
            android:layout_height="38dp"
            android:layout_marginTop="10dp"
            android:background="#0866FE"
            android:src="@drawable/plus_circle">

        </ImageButton>

        <ImageView
            android:layout_width="68dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="150dp"
            android:background="#0866FE"
            android:scaleX="2"
            android:scaleY="2"
            android:src="@drawable/facebook_white" />


    </LinearLayout>

    <LinearLayout
        android:id="@+id/facebook_what_on_your_mind"
        android:layout_width="411dp"
        android:layout_height="60dp"
        android:background="#0866FE"
        android:orientation="horizontal"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="60dp"
        tools:ignore="MissingConstraints">

        <ImageButton
            android:id="@+id/photo_button"
            android:layout_width="113dp"
            android:layout_height="match_parent"
            android:background="#0866FE"
            android:src="@drawable/images"
            android:scaleX="2">

        </ImageButton>

        <EditText
            android:id="@+id/whats_on_your_mind"
            android:layout_width="291dp"
            android:layout_height="match_parent"
            android:background="#0866FE"
            android:gravity="center"
            android:hint="what's on your mind ?"
            tools:ignore="HardcodedText">


        </EditText>


    </LinearLayout>

    <LinearLayout
        android:id="@+id/facebook_bottom"
        android:layout_width="416dp"
        android:layout_height="60dp"
        android:background="#0866FE"
        android:orientation="horizontal"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteY="670dp">


        <ImageButton
            android:id="@+id/notifications"
            android:layout_width="80dp"
            android:layout_height="54dp"
            android:background="#0866FE"
            android:src="@drawable/notifications">

        </ImageButton>

        <ImageButton
            android:id="@+id/market"
            android:layout_width="80dp"
            android:layout_height="54dp"
            android:background="#0866FE"
            android:src="@drawable/marketplace">

        </ImageButton>

        <ImageButton
            android:id="@+id/friends"
            android:layout_width="80dp"
            android:layout_height="54dp"
            android:background="#0866FE"
            android:src="@drawable/friends">

        </ImageButton>

        <ImageButton
            android:id="@+id/tv"
            android:layout_width="80dp"
            android:layout_height="54dp"
            android:background="#0866FE"
            android:src="@drawable/tv">

        </ImageButton>

        <ImageButton
            android:id="@+id/home"
            android:layout_width="80dp"
            android:layout_height="54dp"
            android:background="#0866FE"
            android:src="@drawable/home">

        </ImageButton>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>